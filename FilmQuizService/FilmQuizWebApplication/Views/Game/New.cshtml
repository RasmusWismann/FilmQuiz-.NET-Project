@{
    ViewBag.Title = "New";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<div class="page-header">
    <h1>
        Create new game
    </h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" action="/Game/New" method="post">
            <fieldset>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="name">Name</label>
                    <div class="col-md-4">
                        <input id="name" name="name" type="text" placeholder="Enter a game name" class="form-control input-md" required="">
                    </div>
                </div>

                <!-- Multiple Radios (inline) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="players">Players</label>
                    <div class="col-md-4">
                        <label class="radio-inline" for="players-0">
                            <input type="radio" name="players" id="players-0" value="1" checked="checked">
                            1
                        </label>
                        <label class="radio-inline" for="players-1">
                            <input type="radio" name="players" id="players-1" value="2">
                            2
                        </label>
                        <label class="radio-inline" for="players-2">
                            <input type="radio" name="players" id="players-2" value="3">
                            3
                        </label>
                        <label class="radio-inline" for="players-3">
                            <input type="radio" name="players" id="players-3" value="4">
                            4
                        </label>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="category">Category</label>
                    <div class="col-md-4">
                        <select id="category" name="category" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="turns">Turns</label>
                    <div class="col-md-4">
                        <select id="turns" name="turns" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Button (Double) -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="create"></label>
                    <div class="col-md-8">
                        <button id="create" name="create" class="btn btn-success" type="submit">Create</button>
                        <button id="cancel" name="cancel" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Game")'">Cancel</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</div>